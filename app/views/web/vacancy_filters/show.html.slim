- set_meta_tags canonical: vacancy_filter_url(filter_slug(@options))
- title seo_for_paging(@page, @title)
- description seo_for_paging(@page, @description)

- content_for :header do
  - @header

= render partial: 'web/shared/vacancy_filter', locals: { vacancy_search_form: @vacancy_search_form, tags: @tags }

= render partial: 'web/shared/vacancies', object: @vacancies

- if @vacancies.empty?
  = render 'web/shared/empty_list'
